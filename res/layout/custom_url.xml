<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  
  <TextView android:id="@+id/tv_custom_url_title"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_alignParentTop="true"
  android:text="@string/bootmenu_own_url" />
    
  <EditText android:id="@+id/et_custom_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_custom_url_title"
        android:text="http://"
          />

    <Button android:id="@+id/btn_custom_url_ok"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="@string/ok"
        android:layout_below="@id/et_custom_url" />
  
</RelativeLayout>
